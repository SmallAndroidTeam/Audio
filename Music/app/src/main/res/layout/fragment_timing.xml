<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="定时停止播放"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timing_10min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:text="10分钟后"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timing_20min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:text="20分钟后"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timing_30min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="30分钟后"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timing_45min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="45分钟后"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timing_60min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="60分钟后"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timing_90min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="90分钟后"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
  <EditText
      android:id="@+id/control_time"
      android:layout_width="0dp"
      android:layout_weight="3"
      android:layout_height="50dp"
      android:hint="请输入自定义时间（分钟）"
      android:gravity="center_vertical"
      android:textColor="@color/text_color"
      android:background="?android:attr/selectableItemBackground"
      android:textSize="15sp"
      />
        <Button
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>